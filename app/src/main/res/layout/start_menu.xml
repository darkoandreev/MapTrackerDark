<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">


    <Button
        android:id="@+id/start_tracking"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Start tracking"
        android:layout_marginTop="50dp"
        android:background="@drawable/input_background"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/map_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="View map"
        android:layout_marginTop="50dp"
        android:background="@drawable/view_map_background"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/stop_tracking"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Stop tracking"
        android:layout_marginTop="50dp"
        android:background="@drawable/stop_tracking_background"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/show_database"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Show database"
        android:layout_marginTop="50dp"
        android:background="@drawable/show_database_background"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/clear_database"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Clear database"
        android:layout_marginTop="50dp"
        android:background="@drawable/clear_database_background"
        android:textStyle="bold"/>

</LinearLayout>